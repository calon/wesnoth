#textdomain wesnoth-units
[unit_type]
    id=Nemesis
    name= _ "female^Nemesis"
    {TRAIT_FEARLESS_MUSTHAVE}
    gender=female
    race=human
    image="units/undead-necromancers/necromancer+female.png"
    {MAGENTA_IS_THE_TEAM_COLOR}
    profile="portraits/humans/necromancer+female.png"
    advances_to=Nyx
    {AMLA_DEFAULT}
    level=5
    hitpoints=110
    movement_type=smallfoot
    movement=7
    alignment=chaotic
    experience=150
    cost=180
    usage=mixed fighte`r
    description= _ "One of the pinnacles of what is considered 'black magic' is the art of necromancy, the terrible ability to awaken the dead with false life. This discovery alone caused humanity's condemnation of black magic, for the nightmarish things it has made real have given fear a vast new arsenal."+{SPECIAL_NOTES}+{SPECIAL_NOTES_FEEDING}+{SPECIAL_NOTES_REGENERATES}+{SPECIAL_NOTES_FIRSTSTRIKE}+{SPECIAL_NOTES_BACKSTAB}+{SPECIAL_NOTES_SKIRMISHER}+{SPECIAL_NOTES_STEADFAST}+{SPECIAL_NOTES_MARKSMAN}+{SPECIAL_NOTES_PLAGUE}+{SPECIAL_NOTES_SLOW}+{SPECIAL_NOTES_MAGICAL}+{SPECIAL_NOTES_ARCANE}+{SPECIAL_NOTES_DISTRACT}+{SPECIAL_NOTES_SHOCK}+{SPECIAL_NOTES_STUN}
    die_sound={SOUND_LIST:HUMAN_FEMALE_DIE}
    {DEFENSE_ANIM "units/undead-necromancers/necromancer+female-defend.png" "units/undead-necromancers/necromancer+female.png" {SOUND_LIST:HUMAN_FEMALE_HIT} }
   [portrait]
       size=400
       side="left"
       mirror="false"
       image="portraits/humans/transparent/necromancer+female.png"
   [/portrait]
   [portrait]
       size=400
       side="right"
       mirror="true"
       image="portraits/humans/transparent/necromancer+female.png"
   [/portrait]
   [abilities]
        {ABILITY_FEEDING}
        {ABILITY_REGENERATES}
        {ABILITY_SKIRMISHER}
        {ABILITY_STEADFAST}
        {ABILITY_DISTRACT}
        {ABILITY_INITIATIVE}
        {ABILITY_DELUMINATES}
        {ABILITY_DISRUPTS}
        {ABILITY_MIDDLE_PROTECTION}
    [/abilities]
    [attack]
        name=plague staff
        description=_"plague staff"
        icon=attacks/staff-plague.png
        type=impact
        range=melee
        damage=9
        number=3
        [specials]
            {WEAPON_SPECIAL_PLAGUE}
            {WEAPON_SPECIAL_FIRSTSTRIKE}
            {WEAPON_SPECIAL_BACKSTAB}
            {WEAPON_SPECIAL_SHOCK}
            {WEAPON_SPECIAL_STUN}
            {WEAPON_SPECIAL_NOCOUNTERATTACK}
        [/specials]
    [/attack]
    [attack]
        name=chill wave
        description=_"chill wave"
        type=cold
        [specials]
            {WEAPON_SPECIAL_CIRCLE}
            {WEAPON_SPECIAL_FIRSTSTRIKE}
            {WEAPON_SPECIAL_BACKSTAB}
            {WEAPON_SPECIAL_SLOW}
            {WEAPON_SPECIAL_SHOCK}
            {WEAPON_SPECIAL_STUN}
            {WEAPON_SPECIAL_NOCOUNTERATTACK}
        [/specials]
        range=ranged
        damage=20
        number=2
        icon=attacks/iceball.png
    [/attack]
    [attack]
        name=shadow wave
        description=_"shadow wave"
        type=arcane
        [specials]
            {WEAPON_SPECIAL_CIRCLE}
            {WEAPON_SPECIAL_FIRSTSTRIKE}
            {WEAPON_SPECIAL_BACKSTAB}
            {WEAPON_SPECIAL_SLOW}
            {WEAPON_SPECIAL_SHOCK}
            {WEAPON_SPECIAL_STUN}
            {WEAPON_SPECIAL_NOCOUNTERATTACK}
        [/specials]
        range=ranged
        damage=15
        number=2
        icon=attacks/dark-missile.png
    [/attack]
